{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 600,
    "title": "Air pollution death rates (2000-2015)",
    "data": {
      "url": "https://raw.githubusercontent.com/jpha0018/Assignment2/main/deathrate_airpol.csv"
    },
     "width": 430,
  "height": 250,
    "params": [
      {
        "name": "Population_Above",
        "value": 0,
        "bind": {
          "input": "range",
          "min": 0,
          "max": 100000000,
          "step": 1000000,
          "name": "Minimum Population: "
        }
      },
          {
        "name": "Year_selection",
        "value": 2010,
        "bind": {
          "input": "range",
          "min": 2000,
          "max": 2015,
          "step": 5,
          "name": "Year: "
      }
          },
      {
        "name": "Continent_selection",
        "bind": {
          "input": "select",
          "options": [
            null,
            "North America",
            "South America",
            "Europe",
            "Africa",
            "Asia",
            "Oceania"
          ],
          "labels": [
            "Show All",
            "North America",
            "South America",
            "Europe",
            "Africa",
            "Asia",
            "Oceania"
          ],
          "name": "Continent Selection: "
        }
      }
    ],
    "transform": [
       {"filter": "datum.Year == Year_selection"},
      {"filter": "datum.Population > Population_Above"},
      {
        "filter": "Continent_selection == null || datum.Continent == Continent_selection"
      }

    ],
    "encoding": {
      "x": {
        "field": "GDP per capita",
        "type": "quantitative",
        "title": "GDP per capita (USD)",
        "axis": {"tickCount": 7},
        "scale": {"type": "linear","domain":[1,90000]}
      },
      "y": {
        "field": "Death rates per 100,000",
        "type": "quantitative",
        "title": "Death rate per 100,000",
        "axis": {"tickCount": 3},
        "scale": {"type": "log", "domain":[1,2000]}
      }
    },
    "layer": [
      {
        "selection": {
          "continent_highlight": {
            "type": "multi",
            "fields": ["Continent"],
            "bind": "legend"
          }
        },
        "mark": "circle",
        "encoding": {
          "size": {
            "field": "Population",
            "type": "quantitative",
            "scale": {
              "type": "threshold",
              "domain": [1000000, 10000000, 50000000, 100000000, 500000000],
              "range": [10, 50, 150, 200, 300, 400]
            },
            "legend": {"format": ".1s"}
          },
          "color": {
            "field": "Continent",
            "type": "nominal",
            "scale": {
              "domain": [
                "North America",
                "South America",
                "Europe",
                "Africa",
                "Asia",
                "Oceania"
              ],
              "range": [
                "#e41a1c",
                "#984ea3",
                "#ff7f00",
                "#a6cee3",
                "#377eb8",
                "#a65628"
              ]
            }
          },
          "opacity": {
            "condition": {"selection": "continent_highlight", "value": 0.6},
            "value": 0.2
          },
          "tooltip": [
            {"field": "Country", "type": "nominal"},
            {"field": "Continent", "type": "nominal"},
            {"field": "Death rates per 100,000", "type": "quantitative", "format": ".2f"},
            {"field": "Population", "type": "quantitative", "format": ","},
            {"field": "GDP per capita","type": "quantitative","format": ",.2f"}
          ]
        }
      },
      {
        "mark": {
          "type": "text",
          "align": "right",
          "baseline": "middle",
          "dx": -12,
          "fontSize": 11.5,
          "fontStyle": "italic"
        },
        "encoding": {
          "text": {"field": "Country", "type": "nominal"},
          "color": {"value": "black"},
          "opacity": {
            "condition": {
              "test": "datum['Country'] == 'China' || datum['Country'] == 'India' || datum['Country'] == 'Australia' || datum['Country'] == 'India' ||datum['Country'] == 'Afghanistan' ||  datum['Country'] == 'United States'",
              "value": 1
            },
            "value": 0
          },
          "tooltip": [
            {"field": "Country", "type": "nominal"},
            {"field": "Continent", "type": "nominal"},
            {"field": "Death rates per 100,000", "type": "quantitative", "format": ".2f"},
            {"field": "Population", "type": "quantitative", "format": ","},
            {"field": "GDP per capita","type": "quantitative","format": ",.2f"}
          ]
        }
      }
    ]
  }
